        <td style="font-weight: bold; color: red" ><%= sat.referencia.first(12) %></td>
        <td ><%= sat.descripcion.first(90) %></td>
        <td ><%= link_to "[Editar/Ver]", edit_sat_path(sat), class: "xxx" %></td>
        
        <td>
          
               Cerrado
           
         </td>
         </td>
         </td>
 
    </tr>
    <% end %>
    
    
    <% end %>
    
</table>

<p>
    <%= link_to "Regresar", sats_path(@sats), class:"boton" %>
</p>